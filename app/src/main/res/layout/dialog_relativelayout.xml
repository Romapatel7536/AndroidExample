<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:paddingLeft="@dimen/_16sdp"
    android:paddingRight="@dimen/_16sdp">

    <TextView
        android:id="@+id/tvFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_80sdp"
        android:fontFamily="sans-serif-condensed-medium"
        android:gravity="center"
        android:text="@string/feedback"
        android:textColor="@color/white"
        android:textSize="@dimen/_20ssp" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFeedback"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/login_edit_background"
        android:hint="@string/enter_full_name"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_15ssp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etRelativeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etName"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_14sdp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/login_edit_background"
        android:hint="@string/enter_your_email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:padding="@dimen/_8sdp"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_15ssp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/etDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etRelativeEmail"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/login_edit_background"
        android:hint="@string/feedback_details"
        android:importantForAutofill="no"
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        android:textColorHint="@color/white"
        android:textSize="@dimen/_15ssp"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/cbAgree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/etDetails"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/_20sdp"
        android:buttonTint="@color/white"
        android:checked="false"
        android:text="@string/i_agree"
        android:textColor="@color/white"
        android:textSize="@dimen/_16ssp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cbAgree"
        android:layout_alignParentStart="true"
        android:layout_marginHorizontal="@dimen/_50sdp"
        android:background="@drawable/login_button_background"
        android:text="@string/i_agree"
        android:textColor="@color/white" />

</RelativeLayout>